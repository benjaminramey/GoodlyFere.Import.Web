<script type="text/template" id="converterform-view">
<h2>Add a converter</h2>
<form>
    @Html.Label("Name", new { @for = "name" })
    @Html.TextBox("name", "{{name}}")<br />
    @Html.Label("Type", new { @for = "type" })
    @Html.DropDownList("type", new SelectListItem[0])
    
    <p>
        <input type="submit" value="Submit"/>
    </p>
</form>

</script>

<script type="text/template" id="converters-view">
    <h2>Converters</h2>
    <a href="model/converter/new" id="newconverter-link">+ New converter</a>
    | <a href="#" class="refresh">Refresh</a>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

</script>

<script type="text/template" id="converterrow-view">
    <td class='converter-name'>{{name}}</td>
    <td class='converter-type'>{{type}}</td>
    <td class='converter-actions'></td>
</script>

<script type="text/template" id="converteractions-view">
    <a href="model/converter/edit/{{id}}" class="edit-action">Edit</a> |
    <a href="#" class="delete-action">Delete</a>
</script>
